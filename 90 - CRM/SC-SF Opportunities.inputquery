LEFT OUTER JOIN
SELECT [HomeRates.Exchange Rate] FROM [SC-Exchange Rates] 'HomeRates' ON  [HomeRates.Valid From Date] <= NOWDATE AND [HomeRates.Valid To Date] >= NOWDATE AND [HomeRates.From Currency Key] = [SC-SFDC Opportunity.HC Currency Key]
LEFT OUTER JOIN
SELECT [DocRates.Exchange Rate] FROM [SC-Exchange Rates] 'DocRates' ON  [DocRates.Valid From Date] <= NOWDATE AND [DocRates.Valid To Date] >= NOWDATE AND [DocRates.From Currency Key] = [SC-SFDC Opportunity.Currency ISO Code]
LEFT OUTER JOIN
SELECT [RegRates.Exchange Rate] FROM [SC-Exchange Rates] 'RegRates' ON  [RegRates.Valid From Date] <= NOWDATE AND [RegRates.Valid To Date] >= NOWDATE AND [RegRates.From Currency Key] = [SC-SFDC Opportunity.RC Currency Key]